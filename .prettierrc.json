{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none",
    "plugins": ["prettier-plugin-vue"],
    "overrides": [
        {
            "files": ["*.vue", "*.jsx", "*.tsx", "*.cjs", "*.js"],
            "options": {
                "embeddedLanguageFormatting": "off"
            }
        },
        {
            "files": ["*.js"],
            "options": {
                "embeddedLanguageFormatting": "off"
            }
        }
    ]
}
